.row
  %form{:action => "/ideas/create/", :method => 'post', :class => 'form-stacked'}
    %textarea{:name => 'idea_body'}
    %input{:type => 'submit', :name => 'submit', :value => 'Submit', :class => 'btn primary'}

- if !@ideas.blank?
  -for idea in @ideas
    .row
      %a{:href => "/ideas/edit/#{idea.id}/"} #{idea.body}
      =escape_html idea.updated_at.strftime("%B %d, %Y at %I:%M %p")
      %form{:action => "/ideas/#{idea.id}", :method => 'post'}
        %input{:type => 'hidden', :name => '_method', :value => 'delete'}
        %input{:type => 'hidden', :name => 'id', :value => "#{idea.id}"}
        %button{:type => 'submit', :class => 'btn-delete'} Delete
-else
  %p No Ideas
