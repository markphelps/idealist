%form{:action => "/ideas/create/", :method => 'post', :id => 'create-form'} 
  %textarea{:name => 'idea_body', :class => 'span16', :id => 'new-idea'}
- if !@ideas.blank?
  -for idea in @ideas
    .row
      %a{:href => "/ideas/edit/#{idea.id}/"} #{idea.body}
      =escape_html idea.updated_at.strftime("%B %d, %Y at %I:%M %p")
      %form{:action => "/ideas/#{idea.id}", :method => 'post', :class => 'form-inline'}
        %input{:type => 'hidden', :name => '_method', :value => 'delete'}
        %input{:type => 'hidden', :name => 'id', :value => "#{idea.id}"}
        %button{:type => 'submit', :class => 'btn-link'} delete
-else
  %p No Ideas
