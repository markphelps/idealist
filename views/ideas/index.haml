.row
  .span12
    %form{:action => "/ideas/create/", :method => 'post', :id => 'idea-form'}
      %textarea{:placeholder => "What's your idea?", :name => 'idea_body', :class => 'span16', :id => 'idea-textarea'}
- if !@ideas.blank?
  -for idea in @ideas
    .row
      .idea
        .span7
          %a{:href => "/ideas/#{idea.id}/"} #{h idea.body}
        .span4
          .pull-right
            =escape_html idea.updated_at.strftime("%B %d, %Y at %l:%M %p")
        .span1
          .pull-right
            %form{:action => "/ideas/#{idea.id}", :method => 'post', :class => 'delete'}
              %input{:type => 'hidden', :name => '_method', :value => 'delete'}
              %input{:type => 'hidden', :name => 'id', :value => "#{idea.id}"}
              %button{:type => 'submit', :class => 'btn-link'}
                %i{:class => 'icon-remove'}
-else
  .row
    .span12
      %p No Ideas