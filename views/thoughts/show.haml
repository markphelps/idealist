%a{:href => "/lists/#{@list.id}/thoughts"} All Thoughts

-if !@thought.nil?
	%dl
		%dt Thought
		%dd= escape_html @thought.body

	%a{:href => "/lists/#{@list.id}/thoughts/edit/#{@thought.id}"} Edit Thought

	%form{:action => "/lists/#{@list.id}/thoughts/#{@thought.id}", :method => 'post'}
		%input{:type => 'hidden', :name => '_method', :value => 'delete'}
		%input{:type => 'hidden', :name => 'listId', :value => "#{@list.id}"}
		%input{:type => 'hidden', :name => 'id', :value => "#{@thought.id}"}
		%input{:type => 'submit', :value => 'Delete'}

-else
	%p Invalid ID
