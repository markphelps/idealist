%a{:href => '/'} All Ideas

-if !@idea.nil?
	%dl
		%dt Idea/ToDo
		%dd= escape_html @idea.body

	%a{:href => "/edit/#{@idea.id}"} Edit Idea
	
	%form{:action => "/#{@idea.id}", :method => 'post'}
		%input{:type => 'hidden', :name => '_method', :value => 'delete'}
		%input{:type => 'hidden', :name => 'id', :value => "#{@idea.id}"}
		%input{:type => 'submit', :value => 'Delete'}

-else
	%p Invalid ID